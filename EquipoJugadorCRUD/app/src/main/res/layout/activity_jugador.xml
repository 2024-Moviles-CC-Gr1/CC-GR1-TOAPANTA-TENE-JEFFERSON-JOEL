<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sport.equipojugadorcrud.Jugador">

    <!-- Nombre del Jugador -->
    <EditText
        android:id="@+id/txt_nombre_jugador"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Nombre del Jugador"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <!-- Edad -->
    <EditText
        android:id="@+id/txt_edad_jugador"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Edad"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txt_nombre_jugador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nombre_jugador"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombre_jugador" />

    <!-- País -->
    <EditText
        android:id="@+id/txt_pais_jugador"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="País"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_edad_jugador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_edad_jugador"
        app:layout_constraintTop_toBottomOf="@+id/txt_edad_jugador" />

    <!-- Estatura -->
    <EditText
        android:id="@+id/txt_estatura_jugador"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Estatura (cm)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/txt_pais_jugador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_pais_jugador"
        app:layout_constraintTop_toBottomOf="@+id/txt_pais_jugador" />

    <!-- ID Equipo -->
    <EditText
        android:id="@+id/txt_equipo"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:editable="false"
        android:ems="10"
        android:hint="ID Equipo"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txt_estatura_jugador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_estatura_jugador"
        app:layout_constraintTop_toBottomOf="@+id/txt_estatura_jugador" />

    <!-- Crear Jugador Button -->
    <Button
        android:id="@+id/btn_insert_jugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="CREAR JUGADOR"
        app:layout_constraintEnd_toEndOf="@+id/txt_equipo"
        app:layout_constraintStart_toStartOf="@+id/txt_equipo"
        app:layout_constraintTop_toTopOf="@+id/txt_equipo" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_CrearJugadorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Jugador"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_nombre_jugador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Equipo Name Label -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:text="Equipo:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_nombre_jugador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_CrearJugadorTitle"
        app:layout_constraintVertical_bias="0.375" />

    <!-- Display Selected Equipo Name -->
    <TextView
        android:id="@+id/tv_titleEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_nombre_jugador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/tv_CrearJugadorTitle"
        app:layout_constraintVertical_bias="0.375" />

</androidx.constraintlayout.widget.ConstraintLayout>
